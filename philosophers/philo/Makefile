NAME     = philo
SRCS_DIR = srcs
OBJS_DIR = objs
SRCFILES	:= sources/*.c
OBJFILES	= ./objs/

PINK 		:= \033[38;5;218m
			
OBJ		=	$(SRCFILES:$(SRCFILES)%.c=$(OBJFILES)%.o)
CC       = cc
CFLAGS   =  -Wall -Wextra -Werror
HEADERS  = header/philosophers.h

all: $(NAME)

$(OBJS_DIR):
	@mkdir -p $(OBJS_DIR)
	@echo -e "$(PINK)üç≥ Preparing the kitchen for the philosophers... üç≥\033[0m"

${OBJS_DIR}/%.o: ${SRCS_DIR}/%.c
	@${CC} ${CFLAGS} -pthread -c $< -o $@

${NAME}: $(OBJS_DIR) $(OBJS) ${HEADERS}
	@$(CC) $(CFLAGS) -pthread $(OBJ) -o $(NAME)
	@echo -e "$(PINK)üçù The restaurant has opened! üçù ‚Äß‚ÇäÀö ‚ãÖ ìêêìé© ‚Äß‚ÇäÀö ‚ãÖ ¬∑ \033[0m"
	@echo -e "\033[33m$$ART\033[0m"

clean:
	@rm -rf $(OBJS_DIR)

fclean: clean
	@rm -rf $(NAME)

re: fclean all

.PHONY:	all clean fclean re bonus

